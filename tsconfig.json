{
  "compilerOptions": {
      "target": "ESNext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "baseUrl": "src",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "types": ["vite/client", "vite-plugin-svgr/client", "jest"],
      "paths": {
          "@components/*": ["components/*"],
          "@utils/*": ["utils/*"]
      }
  },
  "include": ["src"],
  "exclude": ["__deprecated"]
}